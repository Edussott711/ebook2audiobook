# Configuration pour Mode Distribué Docker Compose
# Copier ce fichier en .env et modifier les valeurs

# ============================================================================
# Configuration Générale
# ============================================================================

# Nombre de workers attendus (pour le coordinator)
NUM_WORKERS=2

# Mot de passe Redis (optionnel, laisser vide par défaut)
REDIS_PASSWORD=

# Credentials Flower dashboard (monitoring)
FLOWER_USER=admin
FLOWER_PASSWORD=admin

# ============================================================================
# Configuration Workers (pour docker-compose.worker.yml)
# ============================================================================

# IP du coordinator (REQUIS pour les workers sur autres machines)
# Exemple: COORDINATOR_IP=192.168.1.10
COORDINATOR_IP=localhost

# Nombre de GPUs sur cette machine worker
NUM_GPUS=2

# Hostname pour identifier les workers (auto-détecté si non spécifié)
# HOSTNAME=machine1

# ============================================================================
# Configuration Build
# ============================================================================

# Version PyTorch : cuda124, cuda121, cpu, rocm
TORCH_VERSION=cuda124

# Skip XTTS test lors du build (gagner du temps)
# true ou false
SKIP_XTTS_TEST=false
