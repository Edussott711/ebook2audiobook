[flake8]
# Configuration for flake8 linting

# Max line length to match black formatter
max-line-length = 88

# Extend default ignore list
extend-ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # E501: line too long (handled by max-line-length)
    E501,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E402: module level import not at top of file
    E402,
    # F401: imported but unused (handled by autoflake)
    # F841: local variable is assigned to but never used

# Exclude patterns
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    .tox,
    tmp,
    models,
    voices,

# Per file ignores
per-file-ignores =
    __init__.py:F401,E402
    tests/*:F401,F811

# Count errors
count = True

# Show source code
show-source = True

# Show error codes with detailed output
statistics = True

# Maximum complexity for functions (McCabe)
max-complexity = 15
